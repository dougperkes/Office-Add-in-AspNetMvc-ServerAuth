@{
    ViewBag.Title = "Home Page";
}
<div id="connectContainer">
    <p> Use the button below to connect to Office 365. </p>

    <div><button id="loginO365PopupButton" disabled="true" class="popupButton ms-Button ms-Button--primary"><span class="ms-Button-label">Connect to Office 365</span></button></div>
    <div><button id="loginGooglePopupButton" disabled="true" class="popupButton ms-Button ms-Button--primary"><span class="ms-Button-label">Connect to Google</span></button></div>
    <div><button id="loginFacebookPopupButton" disabled="true" class="popupButton ms-Button ms-Button--primary"><span class="ms-Button-label">Connect to Facebook</span></button></div>
    <div><button id="loginDropBoxPopupButton" disabled="true" class="popupButton ms-Button ms-Button--primary"><span class="ms-Button-label">Connect to DropBox</span></button></div>

</div>
<div id="waitContainer" style="display:none">
    <div class="ms-Spinner"></div>
    <p>Please complete the authentication in the pop-up window.</p>
</div>

@section scripts {
    <script>
        var stateKey = '@ViewBag.StateKey';
    </script>
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    @*Reference the autogenerated SignalR hub script.*@
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Add-In-Home-Index.js"></script>
}