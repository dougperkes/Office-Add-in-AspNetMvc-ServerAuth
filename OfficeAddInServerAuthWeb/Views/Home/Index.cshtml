@{
    ViewBag.Title = "Home Page";
}

@if (!ViewBag.IsAuthenticated)
{

    <p> Use the button below to connect to Office 365. </p>
    <p>
        <button id="loginPopupButton" class="ms-Button ms-Button--primary"><span class="ms-Button-label">Connect to Office 365</span></button>
    </p>
    <p>
        Received messages
        <textarea id="messageLog"></textarea>
        <br />
        <button onclick="location.reload();">Reload page</button>

    </p>

} else
{
    <p>Welcome! You are authenticated</p>
    <p>@Html.ActionLink("Send a message", "Index", "Message")</p>
}

@section scripts {
    <script>
        var stateKey = '@ViewBag.StateKey';
    </script>
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    @*Reference the autogenerated SignalR hub script.*@
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/Add-In-Home-Index.js"></script>

    }